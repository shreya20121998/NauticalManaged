<mvc:View
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    controllerName="com.ingenx.nauti.masterdashboard.controller.ConfigVoyage"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
>
    <Page id="_IDGenPage1" >
        <headerContent>
           
            <Bar id="_IDGenBar2">
                <contentLeft>
                    <Button id="_IDGenIcon1"
                        icon="sap-icon://nav-back"
                        press="onBackPress"
                    />

                    <Button id="_IDGenIcon2"
                        icon="sap-icon://home"
                        press="onPressHome"
                    />
                   
                    <Text id="_IDGenText1"
                        class="text1"
                        text="Voyage Release Strategy"
                    />
                </contentLeft>
                
            </Bar>
        </headerContent>

       
    <Panel id="_IDGenPanel1" class="tablepanel">
         <Bar
            id="_IDGenBar1"
            class="_IDGenBar1"
         >
            <contentLeft>
                <Button id="entryBtn"  text="New Entries" press="newEntries" type="Emphasized"/>
                <!-- <Button id="editBtn" text="Edit"  press="pressEdit"/> -->
                <Button  id ="deleteBtn" text="Delete" press="onDeletePress" type="Emphasized"/>
               
                
            </contentLeft>
            
         </Bar>
        
        <ScrollContainer id="scrollContainer" height="calc(100% - 50px)" vertical="true" class="scrollContainer">

        <Table
            id="createTypeTable"
            mode="MultiSelect"
            items="{/VoyageRealeaseSet}"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="100%"
            class="mastertables"
             noDataText="Loading ..."
             
           
         >
            <columns>
                <Column id="_IDGenColumn1">
                    <Text
                        id="_IDGenText111"
                        text="Release Strategy"
                    />
                </Column>
                <Column id="_IDGenColumn2">
                    <Text
                        id="_IDGenText2"
                        text=" Voyage Type"
                    />
                </Column>
                <Column id="_IDGenColumn3">
                    <Text
                        id="_IDGenText3"
                        text=" Vessel Type"
                    />

                </Column>
                <Column id="_IDGenColumn4">
                    <Text
                        id="_IDGenText4"
                        text="User Id Group"
                    />
                    
                </Column>
                <Column id="_IDGenColumn5">
                    <Text
                        id="_IDGenText5"
                        text="Approver 1"
                    />
                    
                </Column>
                <Column id="_IDGenColumn6">
                    <Text
                        id="_IDGenText6"
                        text="Approver 2"
                    />
                    
                </Column>
                <Column id="_IDGenColumn7">
                    <Text
                        id="_IDGenText7"
                        text="Approver 3"
                    />
                    
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                     
                        <Text
                            id="_IDGenInput1"
                            text="{Rels}"
                            
                        />
                        
                        <Text id="_IDGenInput2"  text="{Voyty}" />
                        <Text id="_IDGenInput3"  text="{Vesty}" />
                        <Text id="_IDGenInput4"  text="{Zgroup}" />
                        <Text id="_IDGenInput5"  text="{App1}" />
                        <Text id="_IDGenInput6"  text="{App2}" />
                        <Text id="_IDGenInput7"  text="{App3}" />
                        
                       
                       
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        </ScrollContainer>
    </Panel>
        <Table
            id="entryTypeTable"
             mode="MultiSelect"
            updateFinished="onTableUpdateFinished"
            selectionChange="selectedItems"
            width="100%"
            class="tablepanel entrytables"
            visible="false"
           
         >
            <columns>
                <Column id="_IDGenColumn8">
                    <Text id="_IDGenText8" text="Release Strategy" />
                </Column>
                <Column id="_IDGenColumn9">
                    <Text id="_IDGenText9" text=" Voyage Type" />
                </Column>
                <Column id="_IDGenColumn10">
                    <Text id="_IDGenText10" text=" Vessel Type" />
                </Column>
                <Column id="_IDGenColumn11">
                    <Text id="_IDGenText11" text="User Id Group" />
                </Column>
                <Column id="approver1Column" >
                    <Text id="_IDGenText12" text="Approver 1" />
                </Column >
                <Column id="approver2Column" >
                    <Text id="_IDGenText13" text="Approver 2" />
                </Column>
                <Column id="approver3Column" >
                    <Text id="_IDGenText14" text="Approver 3" />
                </Column>
                

            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem2">
                    <cells>
                        <Input id="Rels" liveChange="onCodeLiveChange"  />
                         <Select id="Voyty" forceSelection="false" items="{/VoyTypeSet}" width="100%">
                            <core:Item id="_IDGenItem1" key="{Voydes}" text="{Voycd}" />
                        </Select>
                        <Select id="Carty" forceSelection="false" items="{/CarTypeSet}" width="100%">
                            <core:Item id="_IDGenItem2" key="{Cardes}" text="{Carcd}" />
                        </Select>
                        
                        <Input id="Zgroup"  showValueHelp="true" valueHelpRequest="onZgroup" liveChange="onZgroupLiveChange" valueHelpOnly ="true" />
                        <Input id="App1" showValueHelp="true" valueHelpRequest="onApproverSelect" valueHelpOnly ="true" />
                        <Input id="App2" showValueHelp="true" valueHelpRequest="onApproverSelect" valueHelpOnly ="true" />
                        <Input id="App3" showValueHelp="true" valueHelpRequest="onApproverSelect" valueHelpOnly ="true" />

                        


                    </cells>
                </ColumnListItem>
            </items>
        </Table>
      
        <Table
         id="updateTypeTable"
         updateFinished="onTableUpdateFinished"
         selectionChange="selectedItems"
         width="100%"
         class="mastertables"
         visible="false" >

            <columns>
                <Column id="_IDGenColumn12">
                    <Text id="_IDGenText15" text="Voyage Code" />
                </Column>
                <Column id="_IDGenColumn13">
                    <Text id="_IDGenText16" text="Description" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem3">
                    <cells>
                        <Text id="Code1" text="" />
                        <Input id="Desc1"  editable="true"  liveChange="onLiveChange"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        
            <OverflowToolbar
                id="mainPageFooter"
                design="Auto"
                visible="false"
            >
                <ToolbarSpacer id="_IDGenToolbarSpacer3" />
                <!-- <Button id="add" text="Add Row" icon="sap-icon://sys-add" press=".onAddRow1" type="Success"></Button>
                <Button id="minus" text="Delete Row" icon="sap-icon://sys-minus" press=".onDeleteRow1" type="Reject"></Button> -->
                <Button
                    id="mainPageSave"
                    text="Save"
                    press="onSave"
                    type="Emphasized"
                />
                <Button
                    id="_IDGenButton22"
                    text="Cancel"
                    press="onCancel"
                    type="Emphasized"
                />
            </OverflowToolbar>

            <OverflowToolbar
                id="mainPageFooter2"
                design="Auto"
                visible="false"
                 class="updateTableFooter"
             >
                <ToolbarSpacer id="_IDGenToolbarSpacer4" />
                <Button
                    id="mainPageSave12"
                    text="Update"
                    press="onUpdate"
                />
                <Button
                    id="_IDGenButton23"
                    text="Cancel"
                    press="onCancel"
                />
            </OverflowToolbar> 
    </Page>
 
    
    
</mvc:View>